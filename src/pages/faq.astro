    <script is:inline>
      const input = document.getElementById("faqSearchInput")
      const meta = document.getElementById("faqSearchMeta")
      const empty = document.getElementById("faqEmpty")
      const items = Array.from(document.querySelectorAll(".faqItem"))
      const copyButtons = Array.from(document.querySelectorAll("[data-copy]"))

      const slugify = (value) => {
        const s = (value || "").toLowerCase().trim()
        const normalized = s
          .normalize("NFKD")
          .replace(/[\u0300-\u036f]/g, "")
          .replace(/[^a-z0-9\s-]/g, "")
          .replace(/\s+/g, "-")
          .replace(/-+/g, "-")
          .replace(/^-|-$/g, "")
        return normalized.length ? normalized : "faq"
      }

      const ensureIds = () => {
        for (const item of items) {
          if (item.id) continue
          const summary = item.querySelector("summary")
          const title = summary ? summary.textContent : ""
          item.id = `faq-${slugify(title)}`
        }
      }

      const openFromHash = () => {
        const hash = (window.location.hash || "").replace("#", "")
        if (!hash) return
        const el = document.getElementById(hash)
        if (!el) return
        if (el.tagName && el.tagName.toLowerCase() === "details") {
          el.open = true
          el.scrollIntoView({ block: "start", behavior: "smooth" })
        }
      }

      const updateHashFromOpenItem = (item) => {
        if (!item?.id) return
        const url = new URL(window.location.href)
        url.hash = item.id
        window.history.replaceState(null, "", url.toString())
      }

      const clearHashIfMatches = (item) => {
        if (!item?.id) return
        const current = (window.location.hash || "").replace("#", "")
        if (current !== item.id) return
        const url = new URL(window.location.href)
        url.hash = ""
        window.history.replaceState(null, "", url.toString())
      }

      const copyText = async (text) => {
        try {
          await navigator.clipboard.writeText(text)
          return true
        } catch {
          return false
        }
      }

      ensureIds()

      for (const button of copyButtons) {
        button.addEventListener("click", async () => {
          const wrapper = button.closest(".codeBlock")
          const code = wrapper?.querySelector("code")
          const text = code?.innerText || ""
          const ok = await copyText(text)
          const old = button.textContent
          button.textContent = ok ? "Copied" : "Failed"
          window.setTimeout(() => (button.textContent = old), 900)
        })
      }

      for (const item of items) {
        item.addEventListener("toggle", () => {
          if (item.open) {
            updateHashFromOpenItem(item)
          } else {
            clearHashIfMatches(item)
          }
        })
      }

      const update = () => {
        const q = (input.value || "").trim().toLowerCase()
        let visible = 0

        for (const item of items) {
          const hay = (item.getAttribute("data-search") || item.innerText || "").toLowerCase()
          const match = q.length === 0 || hay.includes(q)

          item.style.display = match ? "" : "none"

          if (match) {
            visible++
            if (q.length > 0) {
              item.open = true
            } else {
              item.open = false
            }
          } else {
            item.open = false
          }
        }

        meta.textContent = q.length === 0 ? `${items.length} questions` : `${visible} of ${items.length}`
        empty.style.display = visible === 0 ? "" : "none"
      }

      window.addEventListener("hashchange", openFromHash)
      openFromHash()

      input.addEventListener("input", update)
      update()
    </script>
