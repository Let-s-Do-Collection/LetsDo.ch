---
import WikiPage from "../../components/wiki/WikiPage.astro";
import { loadFarmAndCharmRecipes, recipeToWikiEntry } from "../../lib/recipes/githubFarmAndCharm.js";

const recipeFiles = await loadFarmAndCharmRecipes();
const entries = recipeFiles.map(recipeToWikiEntry);

const config = {
  title: "Farm & Charm Recipes",
  logo: "/assets/logos_resized/farm_and_charm.png",
  aboutTitle: "Recipes",
  aboutSubtitle: "Loaded directly from the GitHub repository",
  aboutText: "Crafting recipes from the mod resources.",
  sections: [
    {
      id: "recipes",
      title: "Recipes",
      subtitle: `${entries.length} entries`,
      entries,
    },
  ],
};
---

<WikiPage config={config} />