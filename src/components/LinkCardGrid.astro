---
const { cards = [] } = Astro.props;
---

<div class="gridWrapper">
  <div class="grid">
    {cards.map((card) => (
      <div class="card">
        <div class="cardContent">
          {card.logo ? (
            <img class="cardLogo" src={card.logo} alt={card.title} loading="lazy" />
          ) : (
            <h3>{card.title}</h3>
          )}

          <p>{card.description}</p>
        </div>

        <div class="cardAction">
          <a class="btn btnPrimary" href={card.href}>View Mod</a>
        </div>
      </div>
    ))}
  </div>
</div>